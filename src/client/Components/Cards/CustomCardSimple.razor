<MudItem xs="12" sm="6" md="3">
    <MudCard Class="kazakh-card pa-4" Style="height: 100px; border: 1px solid #e0e0e0; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <MudStack AlignItems="AlignItems.Start" Spacing="0">
            <MudText Typo="Typo.caption" Color="Color.Primary">
                @Count @(" words")
            </MudText>
            <MudButton Class="custom-navlink"
                       OnClick="@OnClick">
                <MudText Typo="Typo.subtitle1" Style="color:#111827; text-align: left;">
                    @Content
                </MudText>
            </MudButton>
        </MudStack>
    </MudCard>
</MudItem>

@code {
    [Parameter] public string Content { get; set; } = "Default content goes here.";
    [Parameter] public int Count { get; set; } = 0;
    [Parameter] public EventCallback OnClick { get; set; }
}

<style>
    .custom-navlink {
        text-decoration: none;
        color: #111827;
        font-size: 0.9rem;
        padding: 0 !important;
        min-width: 0 !important;
        justify-content: flex-start;
    }

        .custom-navlink:hover {
            background-color: transparent !important;
            color: #2563eb !important;
        }
</style>