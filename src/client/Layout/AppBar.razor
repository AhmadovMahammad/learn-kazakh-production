<MudAppBar Dense="true" Class="custom-appbar">
	<MudIconButton Icon="@Icons.Material.Filled.Menu"
				   Size="Size.Small"
				   Color="Color.Dark"
				   Edge="Edge.Start"
				   OnClick="@ToggleDrawer" />
	<MudLink Href="/" Class="appbar-home-link">
		<MudIcon Icon="@(_bookIcon)" Size="Size.Medium" Color="Color.Primary" Style="margin: 3px 10px 0px 15px;" />
		<MudText Typo="Typo.subtitle1" Style="color: #111827">
			Learn Kazakh Language
		</MudText>
	</MudLink>
</MudAppBar>

@code {
	[Parameter] public bool DrawerOpen { get; set; }
	[Parameter] public EventCallback<bool> DrawerStateChanged { get; set; }

	private readonly string _bookIcon = CustomIcons.Book;

	private async Task ToggleDrawer()
	{
		await DrawerStateChanged.InvokeAsync(!DrawerOpen);
	}
}

<style>
	.custom-appbar {
		display: flex;
		box-shadow: 0px 2.5px 4px rgba(0, 0, 0, 0.1);
		background-color: #fefefe;
	}

	.appbar-home-link {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: inherit;
	}

</style>